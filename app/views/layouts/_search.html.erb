<div class="row">
  <%= search_form_for @q do |f| %>
    <div class="col-md-10">
      <div class='form-group'>
        <%= f.search_field :name_or_ingredients_name_cont, placeholder: "料理名、材料名で検索", class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-2">
      <div class='form-group'>
        <%= f.submit nil, class: 'btn btn-mini' %>
      </div>
    </div>
  <% end %>
</div>
