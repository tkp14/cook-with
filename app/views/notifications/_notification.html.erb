<% user = User.find(notification.from_user_id) %>
<% dish = Dish.find(notification.dish_id) %>
<li id="notification-<%= notification.id %>">
  <div>
    <% if notification.variety == 1 %>
      <p><%= notification.created_at.strftime("%Y/%m/%d(%a) %H:%M") %></p>
      <p class="notification-message">あなたの料理が<%= link_to user.name, user_path(user) %>さんにお気に入り登録されました。</p>
    <% elsif notification.variety == 2 %>
      <p><%= notification.created_at.strftime("%Y/%m/%d(%a) %H:%M") %></p>
      <p class="notification-message">あなたの料理に<%= link_to user.name, user_path(user) %>さんがコメントしました。
      「<%= notification.content %>」</p>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-2">
      <%= link_to((image_tag dish.picture.url), dish_path(dish), class: 'dish-picture') %>
    </div>
    <div class="col-md-7">
      <p><%= link_to dish.name, dish_path(dish) %></p>
      <p><%= dish.description %></p>
    </div>
  </div>
</li>
